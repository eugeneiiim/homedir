#! /bin/bash

doit() {
  PATTERN=$1
  echo ">>> $PATTERN"
  git grep "$PATTERN" -- *.scala | grep -v test
  echo
}

doit "None => None"
doit "None => Nil"
doit "None => \"\""
doit "\"true\" else \"false\""
doit "\.get\s"
doit "log.error(\""
doit "case Some("
doit "var"
doit "asInstanceOf"
doit "sleep"
